<h1>Welcome to noteWorthy</h1>
<div class="container" class="card-panel teal lighten-1">
  <div id="inputBox">
    <h3>Create a new Notebook</h3>
    <%= form_for @notebook, url: {action: "create"} do |f| %>
      <%= f.text_field :title, placeholder: 'Create new notebook', :required => 'required' %>
      <%= f.hidden_field :user_id, :value => @user %>
      <%= button_tag( :class => "createButton") do %>
        <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
      <% end %>
    <% end %>
  </div>
<div class="row">
  <div class="col s12" id="flex-box-container">
  <% @notebooks.each do |notebook| %>
    <ul class="collapsible box #e0e0e0 grey lighten-2" data-collapsible="accordion">
      <li>
      <%= link_to ('<i class="material-icons">delete</i>').html_safe,  notebook,  method: :delete, data: { confirm: 'Are you absolutely sure you want to delete this notebook?' }, :id => "deleteButton" %>
        <div class="collapsible-header"><h4 class="titleNotebook"><%= notebook.title %></h4><a class="waves-effect waves-light btn modal-trigger noteBox" href="#modal1">Create new Note</a>
        </div>
        <div class="collapsible-body">
          <div class="row">
            <div aclass="col s12 m12">
              <% notebook.notes.each do |note| %>
              <% puts "Notes #{note.title}" %>
              <ul class="collapsible " data-collapsible="accordion">
                <li>
                  <div class="collapsible-header "><h5><%= note.title %><h5></div>
                  <div class="collapsible-body">
                    <p><%= note.body %></p>
                  <a class="waves-effect waves-light btn modal-trigger" href="#modal2"><i class="material-icons">mode_edit</i></a>
                  <%= link_to ('<i class="material-icons">not_interested</i>').html_safe,  note,  method: :delete, :id => "deleteButton" %>
                  </div>

                </li>
              </ul>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    </ul>
<div id="modal1" class="modal">
 <div class="addNotes">
  <b>Add a Note to this book</b>
  <%= form_for (@note), url: "/notes" do |f| %>
    <input type='hidden' name='notebook_id' value='<%= notebook.id %>'>
    <%= f.text_field :title, placeholder: 'title', :required => 'required'  %><br>
    <%= f.text_area :body, placeholder: 'body', :required => 'required' %><br>
    <%= button_tag( :class => "createButton") do %>
        <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    <% end %>
  <% end %>
 </div>
</div>



